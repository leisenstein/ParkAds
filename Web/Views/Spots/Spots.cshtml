@using Web.Models

@model SpotsViewModel

@{
    ViewBag.Title = "Spots";
    ViewBag.CurrentView = "Spots";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Parking Spots</h2>
<hr />
<div class="btn-group">
    <div class="btn-group">
        <a href="#" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            Choose city
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink("Aalborg", "ByCity", "Spots", new { city = "aalborg" }, null)</li>
            <li>@Html.ActionLink("Copenhagen", "ByCity", "Spots", new { city = "copenhagen" }, null)</li>
            <li>@Html.ActionLink("Odense", "ByCity", "Spots", new { city = "odense" }, null)</li>
            <li>@Html.ActionLink("Aarhus", "ByCity", "Spots", new { city = "aarhus" }, null)</li>
        </ul>
    </div>
</div>
@Html.Partial("~/Views/Spots/_Locations.cshtml", Model)

